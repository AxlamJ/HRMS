@{
    ViewData["Title"] = "Post_Details";
}


@section PageCSS {
    <!-- Quill CSS -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
}


<style>
    #dropArea {
        cursor: pointer;
        border: 2px dashed #0d6efd;
        padding: 40px 20px;
        border-radius: 8px;
        transition: background-color 0.3s ease, border-color 0.3s ease;
        text-align: center;
        user-select: none;
    }

        #dropArea.dragover {
            background-color: #e9f7fe;
            border-color: #0a58ca;
        }
</style>

<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
    <div class="d-flex flex-column flex-column-fluid">
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                        <li class="breadcrumb-item">
                            <a href="/Products/Index"
                               class="fw-bold fs-14px" style="color:#1F4293 !important">
                                <i class="fa fa-home"
                                   style="color:#1F4293 !important"></i> &nbsp;Trainings
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <i class="fa fa-chevron-right fs-11px"
                               style="color:#1F4293 !important"></i>
                        </li>
                        <li class="breadcrumb-item fs-14px fw-bold" style="color:#1F4293 !important"
                            data-i18n="Manage Employees">Lessons</li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="kt_app_content" class="app-content flex-column-fluid">
            <div id="kt_app_content_container" class="app-container container-fluid">
                <div class="container-fluid" id="app-content-container-fluid">


                    <div class="container p-3">
                        <form id="Post_Details_form">
                            <input type="hidden" id="trainingcategory_Id" name="trainingcategory_Id" value="@ViewBag.Id" />
                            <input type="hidden" id="Id" name="Id" />
                            <div class="row">
                                <!-- Left Column (8 Columns) -->
                                <div class="col-md-8 mb-3">

                                    <div class="card mb-4">
                                        <div class="m-4">
                                            <h1 class="h3 text-dark" id="Post-Heading">Post Detail Manage</h1>
                                        </div>
                                        <div class="card-body">
                                            <div class="row" id="UploadVideoAudioSection">
                                                <div class="col-md-6 mb-3">
                                                    <div class="d-flex flex-column align-items-center gap-2">
                                                        <input type="hidden" id="LessonVideoId" name="LessonVideoId" />
                                                        <label class="form-label">Upload Video</label>
                                                        <div class="border p-2 d-flex align-items-center justify-content-center bg-light rounded"
                                                             style="width: 100px; height: 100px;">
                                                            <i class="bi bi-camera-video fs-1 text-primary"></i> <!-- Video Icon -->
                                                        </div>
                                                        <button type="button" class="btn btn-primary btn-sm" id="btnUploadHeadshot" name="btnUploadHeadshot"
                                                                data-bs-toggle="modal" data-bs-target="#VideoUploadModal">
                                                            <i class="bi bi-upload me-1"></i>Upload
                                                        </button>
                                                    </div>
                                                </div>
                                                <!-- Logo Image / Audio -->
                                                <div class="col-md-6 mb-3">
                                                    <div class="d-flex flex-column align-items-center gap-2">
                                                        <label class="form-label">Upload Audio</label>
                                                        <div class="border p-2 d-flex align-items-center justify-content-center bg-light rounded"
                                                             style="width: 100px; height: 100px;">
                                                            <i class="bi bi-mic fs-1 text-success"></i> <!-- Audio Icon -->
                                                        </div>
                                                        <button type="button" class="btn btn-primary btn-sm" id="btnUploadLogo" name="btnUploadLogo">
                                                            <i class="bi bi-upload me-1"></i>Upload
                                                        </button>
                                                    </div>
                                                </div>



                                            </div>

                                            <div class="row" id="VideoPlayer">

                                                <div class="card shadow-sm">
                                                    <div class="card-body">
                                                        <div class="ratio ratio-16x9 mb-2">
                                                            <video id="videoPlayer" controls playsinline poster>
                                                                <source id="videoSource" src="" type="video/mp4" />
                                                                Your browser does not support the video tag.
                                                            </video>
                                                        </div>
                                                        <div class="d-flex justify-content-between">
                                                            <button class="btn btn-danger px-4 py-2">
                                                                <i class="bi bi-trash-fill me-1"></i> Delete
                                                            </button>
                                                            <button class="btn btn-primary px-4 py-2" onclick="downloadVideo()">
                                                                <i class="bi bi-download"></i> Download
                                                            </button>
                                                            <button type="button" class="btn btn-primary px-4 py-2" id="btnUploadHeadshot"
                                                                    name="btnUploadHeadshot" data-bs-toggle="modal" data-bs-target="#VideoUploadModal">
                                                                <i class="bi bi-upload me-1"></i>Upload
                                                            </button>

                                                        </div>
                                                    </div>
                                                </div>


                                            </div>

                                        </div>
                                    </div>

                                    <div class="card mb-4">
                                        <div class="card-header">
                                            <h5 class="card-title mb-0">Post Details</h5>
                                        </div>
                                        <div class="card-body">
                                            <!-- Title Field -->
                                            <div class="mb-3">
                                                <label for="category-title" class="form-label">Title</label>
                                                <input type="text" id="post-detail-title-input" name="post-detail-title-input" class="form-control"
                                                       placeholder="Enter category title...">
                                            </div>

                                            <!-- Parent Category Dropdown -->
                                            <div class="mb-3">
                                                <label for="category-parent" class="form-label">Category</label>
                                                <select id="category-parent" class="form-select">
                                                    <option>Set as root category</option>
                                                    <option>Subcategory 1</option>
                                                    <option>Subcategory 2</option>
                                                </select>
                                            </div>
                                            <!-- Description Field -->
                                            <div class="mb-3">
                                                <label for="category-description" class="form-label">Description</label>
                                                <div id="post_detail_description_editor" name="post_detail_description_editor" style="height: 150px;">
                                                </div>
                                            </div>


                                        </div>
                                    </div>
                                </div>

                                <!-- Right Column (4 Columns) -->
                                <div class="col-md-4">
                                    <!-- Post Visibility -->
                                    <div class="card shadow mb-2">
                                        <div class="card-body">
                                            <h6 class="text-center mb-2">Post Visibility</h6>
                                            <div class="d-flex justify-content-between">
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="post_detail_status_radio"
                                                           id="post_detail_status_published" value="published" checked />
                                                    <label class="form-check-label badge bg-success text-light p-2" for="published">
                                                        <i class="bi bi-check-circle me-1"></i> Published
                                                    </label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="post_detail_status_radio"
                                                           id="post_detail_status_draft" value="draft" />
                                                    <label class="form-check-label badge bg-primary text-light p-2" for="draft">
                                                        <i class="bi bi-file-earmark-text me-1"></i> Draft
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Thumbnail Tabs -->
                                    <div class="card mb-2">
                                        <div class="card-body">
                                            <ul class="nav nav-tabs mb-2" id="thumbnailTab" role="tablist">
                                                <li class="nav-item">
                                                    <a class="nav-link active px-3 py-1" id="video-tab" data-bs-toggle="tab" href="#video" role="tab">
                                                        Video
                                                        Thumbnail
                                                    </a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link px-3 py-1" id="lesson-tab" data-bs-toggle="tab" href="#lesson" role="tab">
                                                        Lesson
                                                        Thumbnail
                                                    </a>
                                                </li>
                                            </ul>

                                            <div class="tab-content">
                                                <!-- Video Thumbnail Tab -->
                                                <div class="tab-pane fade show active" id="video" role="tabpanel">
                                                    <input type="hidden" id="VideoThumbnailId" name="VideoThumbnailId" />
                                                    <div class="mb-2">
                                                        <img id="videoThumbnailPreview_Img"
                                                             src="https://staging.cdn.apisystem.tech/assets/membership/image-placeholder.svg"
                                                             class="img-fluid rounded" alt="Video Thumbnail" style="width: 100%;height:280px;object-fit: cover;">
                                                    </div>
                                                    <p class="text-muted">Recommended: 1280x720</p>
                                                    <div class="d-flex gap-2">
                                                        <button class="btn btn-primary flex-fill px-3 py-2" id="VideoThumbnailUploadBtn"
                                                                data-bs-toggle="modal" data-bs-target="#videoThumbnailUploadModal">
                                                            <i class="bi bi-upload"></i> Upload
                                                        </button>
                                                        <button class="btn btn-outline-secondary flex-fill px-3 py-2 d-none">
                                                            <i class="bi bi-trash-fill d-none"></i> Remove
                                                        </button>
                                                    </div>
                                                </div>

                                                <!-- Lesson Thumbnail Tab -->
                                                <div class="tab-pane fade" id="lesson" role="tabpanel">
                                                    <input type="hidden" id="LessonThumbnailId" name="LessonThumbnailId" />
                                                    <div class="mb-2">
                                                        <img id="Preview-image-Thumbnail"
                                                             src="https://staging.cdn.apisystem.tech/assets/membership/image-placeholder.svg"
                                                             class="img-fluid rounded" alt="Lesson Thumbnail"
                                                             style="width: 100%;height:280px;object-fit: cover;">
                                                    </div>

                                                    <p class="text-muted">Recommended: 1280x720</p>

                                                    <div class="d-flex gap-2">
                                                        <button type="button" class="btn-sm btn btn-primary flex-fill px-3 py-2" id="LessonThumbnailUploadBtn"
                                                                data-bs-toggle="modal" data-bs-target="#imageUploadModal">
                                                            <i class="bi bi-upload"></i> Upload
                                                        </button>
                                                        <button type="button" class="btn btn-sm btn-primary d-none" id="LessonThumbnailReplaceBtn"
                                                                data-bs-toggle="modal" data-bs-target="#imageUploadModal">
                                                            <i class="bi bi-arrow-repeat me-1"></i> Update
                                                        </button>
                                                        <button type="button" class="btn btn-sm btn-danger d-none" id="LessonThumbnailRemoveBtn">
                                                            <i class="bi bi-x-circle me-1"></i> Remove
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Attached Files -->
                                    <div class="card mb-3">
                                        <div class="card-body">
                                            <h6 class="text-center mb-3">Attached Files</h6>

                                            <!-- Upload Button -->
                                            <div class="mb-3 text-center">
                                                <button type="button" class="btn btn-sm btn-primary" id="PdfUploadBtn" data-bs-toggle="modal"
                                                        data-bs-target="#pdfUploadModal">
                                                    <i class="bi bi-upload"></i> Upload PDF
                                                </button>
                                                <input type="file" id="PdfDocumentInput" accept=".pdf" multiple style="display:none;" />
                                            </div>

                                            <!-- Files Table -->
                                            <div class="table-responsive">
                                                <table class="table" id="pdfTable">
                                                    <thead>
                                                        <tr>
                                                            <th style="width: 150px;">
                                                                Title
                                                                <i class="bi bi-chevron-up toggle-table" style="cursor: pointer;"></i>
                                                            </th>
                                                            <th style="width: 150px;">
                                                                Description
                                                                <i class="bi bi-chevron-up toggle-table" style="cursor: pointer;"></i>
                                                            </th>
                                                            <th style="width: 180px;">
                                                                Actions
                                                                <i class="bi bi-chevron-up toggle-table" style="cursor: pointer;"></i>
                                                            </th>
                                                        </tr>

                                                    </thead>
                                                    <tbody id="pdfTableBody">
                                                    </tbody>
                                                </table>

                                            </div>

                                            <!-- Hidden input to hold uploaded file IDs -->
                                            <input type="hidden" id="PdfDocumentIds" name="PdfDocumentIds" />
                                        </div>
                                    </div>


                                    <!-- Save/Delete Buttons -->
                                    <div class="d-flex justify-content-between mt-2">
                                        <button class="btn btn-danger px-4 py-2">
                                            <i class="bi bi-trash-fill me-1"></i> Delete
                                        </button>
                                        <button id="post_detail_save_btn" name="post_detail_save_btn" class="btn btn-primary px-4 py-2">
                                            <i class="bi bi-save me-1"></i> Save
                                        </button>
                                    </div>
                                </div>

                            </div>
                        </form>



                        <!-- Modal Image Upload -->
                        <div class="modal fade" id="imageUploadModal" tabindex="-1" aria-labelledby="imageUploadModalLabel"
                             aria-hidden="true">
                            <div class="modal-dialog modal-md">
                                <!-- medium size -->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="imageUploadModalLabel">Upload Lesson Thumbnail</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">

                                        <form id="imageUploadForm" novalidate>
                                            <div id="dropArea" tabindex="0">
                                                <p class="mb-2">Drag & Drop an image here or click to select</p>
                                                <p class="mb-2">Recommended: 1280x720</p>
                                                <i class="bi bi-cloud-arrow-up fs-1 text-primary"></i>
                                                <input type="file" name="Post-image-Thumbnail" id="Post-image-Thumbnail" accept="image/*"
                                                       style="display:none" />
                                                <div id="previewContainer" class="mt-3" style="display:none;">
                                                    <img id="imagePreview" src="" alt="Image Preview" class="img-fluid rounded"
                                                         style="max-height: 200px;" />
                                                    <button type="button" class="btn btn-sm btn-danger mt-2" id="removeImageBtn">Remove</button>
                                                </div>
                                            </div>
                                        </form>

                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-primary" id="uploadBtn" disabled>Upload</button>
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <!-- Video Upload Modal -->
                        <!-- Modal -->
                        <div class="modal fade" id="VideoUploadModal" tabindex="-1" aria-labelledby="VideoUploadModalLabel"
                             aria-hidden="true">
                            <div class="modal-dialog modal-md">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Upload Lesson Video</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>

                                    <div class="modal-body">
                                        <form id="videoUploadForm" novalidate>
                                            <div id="videoDropArea"
                                                 class="border rounded d-flex flex-column align-items-center justify-content-center p-4 text-center"
                                                 style="border-style: dashed; cursor: pointer; min-height: 200px;">
                                                <p class="mb-2">Drag & drop your video here or click to select</p>
                                                <i class="bi bi-cloud-arrow-up fs-1 text-primary"></i>
                                                <input type="file" name="PostVideoThumbnail" id="PostVideoThumbnail" accept="video/*"
                                                       style="display: none;" />
                                            </div>

                                            <div id="videoPreviewContainer" class="mt-3" style="display: none;">
                                                <video id="videoPreview" controls class="w-100 rounded border" style="max-height: 300px;"></video>
                                                <button type="button" class="btn btn-sm btn-danger mt-2" id="removeVideoBtn">Remove</button>
                                            </div>
                                        </form>
                                    </div>

                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-primary" id="VideoUploadBtn" disabled>Upload</button>
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

<!--PDF Upload-->

<div class="modal fade" id="pdfUploadModal" tabindex="-1" aria-labelledby="pdfUploadModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="pdfUploadModalLabel">Upload PDF Document</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">

                <div class="mb-3">
                    <label for="category-title" class="form-label">Title</label>
                    <input type="text" id="PdfTitle" name="PdfTitle" class="form-control" placeholder="Enter title...">
                </div>
                <div class="mb-3">
                    <label for="category-title" class="form-label">Description</label>
                    <input type="text" id="PdfDescription" name="PdfDescription" class="form-control"
                           placeholder="Enter Description...">
                </div>

                <form id="pdfUploadForm">
                    <div id="pdfDropArea"
                         class="border rounded d-flex flex-column align-items-center justify-content-center p-4 text-center"
                         style="border-style: dashed; cursor: pointer; min-height: 200px;">
                        <p class="mb-2">Drag & drop your PDF here or click to select</p>
                        <i class="bi bi-cloud-arrow-up fs-1 text-primary"></i>
                        <input type="file" name="PdfFile" id="PdfFile" accept="application/pdf" style="display: none;" />
                    </div>
                    <div id="pdfFileName" class="mt-3 text-center text-muted"></div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="confirmPdfUploadBtn" disabled>Upload</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Uploading Video Thumbnail -->
<div class="modal fade" id="videoThumbnailUploadModal" tabindex="-1" aria-labelledby="videoThumbnailModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="videoThumbnailModalLabel">Upload Video Thumbnail</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form id="videoThumbnailUploadForm" novalidate>
                    <!-- Drop Area -->
                    <div id="videoThumbnailDropArea"
                         class="border rounded d-flex flex-column align-items-center justify-content-center p-4 text-center"
                         style="border-style: dashed; cursor: pointer; min-height: 200px;" tabindex="0">
                        <p class="mb-2">Drag & drop your image here or click to select</p>
                        <p class="text-muted small mb-2">Recommended: 1280x720px</p>
                        <i class="bi bi-cloud-arrow-up fs-1 text-primary"></i>
                        <input type="file" name="VideoThumbnailFile" id="VideoThumbnailFile" accept="image/*"
                               style="display: none;" />

                    </div>

                    <!-- Preview container -->
                    <div id="videoThumbnailPreviewContainer" class="mt-3 text-center" style="display: none;">
                        <img id="videoThumbnailPreview" class="img-fluid rounded border" style="max-height: 200px;"
                             alt="Thumbnail Preview" />
                        <br />
                        <button type="button" class="btn btn-sm btn-danger mt-2" id="removeVideoThumbnailBtn">
                            <i class="bi bi-x-circle me-1"></i> Remove
                        </button>
                    </div>

                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="SubmitVideoThumbnailBtn" disabled>
                    <i class="bi bi-upload me-1"></i> Upload
                </button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section scripts {

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Quill JS -->
    <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>

    <script src="~/scripts/tariningDetails/PostDetail/index.js" asp-append-version="true"></script>
    <script src="~/scripts/tariningDetails/PostDetail/create.js" asp-append-version="true"></script>
}