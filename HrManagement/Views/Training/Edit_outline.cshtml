@{
    ViewData["Title"] = "Edit_outline";
}



<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
    <div class="d-flex flex-column flex-column-fluid">
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                        <li class="breadcrumb-item">
                            <a href="/Products/Index"
                               class="fw-bold fs-14px" style="color:#1F4293 !important">
                                <i class="fa fa-home"
                                   style="color:#1F4293 !important"></i> &nbsp;Trainings

                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <i class="fa fa-chevron-right fs-11px"
                               style="color:#1F4293 !important"></i>
                        </li>
                        <li class="breadcrumb-item fs-14px fw-bold" style="color:#1F4293 !important"
                            data-i18n="Manage Employees">Training Outline</li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="kt_app_content" class="app-content flex-column-fluid">
            <div id="kt_app_content_container" class="app-container container-fluid">
                <div class="container-fluid" id="app-content-container-fluid">


                    <div class="container my-5">
                        <div class="card mt-10">

                            <form id="Tarining-Outline-Form">
                                <input type="hidden" id="Training-Structure-Id" name="Training-Structure-Id" value="@ViewBag.Id" />
                                <input type="hidden" id="OutlineThumbnailId" name="OutlineThumbnailId" />
                                <input type="hidden" id="Id" name="Id" />
                                <div class="row g-4">
                                    <!-- Left Column -->
                                    <div class="col-md-8">
                                        <!-- Category Information Section -->



                                        <div class="card mb-4">
                                            <div class="card-header">
                                                <h5 class="card-title mb-0">Outline Detail</h5>
                                            </div>
                                            <div class="card-body">
                                                <!-- Title Field -->
                                                <div class="mb-3">
                                                    <label for="Outline-Title" class="form-label">Title</label>
                                                    <input type="text" id="Outline-Title" name="Outline-Title" class="form-control" placeholder="Enter title...">
                                                </div>

                                                <!-- Description Field -->
                                                <div class="mb-3">
                                                    <label for="Outline-Description" class="form-label">Description</label>
                                                    <textarea id="Outline-Description" name="Outline-Description" class="form-control" rows="4" placeholder="Enter category description..."></textarea>
                                                </div>

                                                <!-- Parent Category Dropdown -->
                                                <div class="mb-3">
                                                    <label for="Outline-Parent" class="form-label">Category</label>
                                                    <select id="Outline-Parent" name="Outline-Parent" class="form-select">
                                                        <option>Set as root category</option>
                                                        <option>Subcategory 1</option>
                                                        <option>Subcategory 2</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Visibility Section -->
                                        <div class="card mb-4">
                                            <div class="card-header">
                                                <h5 class="card-title mb-0">Visibility</h5>
                                            </div>
                                            <div class="card-body">
                                                <div class="form-check m-3">
                                                    <input class="form-check-input" type="radio" name="visibility" id="Outline-Visibility-Published" value="Published" checked>
                                                    <label class="form-check-label" for="visibility-published">Published</label>
                                                </div>
                                                <div class="form-check m-3">
                                                    <input class="form-check-input" type="radio" name="visibility" id="Outline-Visibility-draft" value="Draft">
                                                    <label class="form-check-label" for="visibility-draft">Draft</label>
                                                </div>
                                                <div class="form-check m-3">
                                                    <input class="form-check-input" type="radio" name="visibility" id="Outline-Visibility-Locked" value="Locked">
                                                    <label class="form-check-label" for="visibility-locked">Locked</label>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <!-- Right Column -->
                                    <div class="col-md-4">
                                        <!-- Category Thumbnail Section -->
                                        <div class="card mb-4">
                                            <div class="card-header">
                                                <h5 class="card-title mb-0">Thumbnail</h5>
                                            </div>
                                            <div class="card-body">
                                                <div class="mb-2">
                                                    <img id="Preview-image-Thumbnail" src="https://staging.cdn.apisystem.tech/assets/membership/image-placeholder.svg" class="rounded-3" alt="Thumbnail" style="width:100%;height:280px;object-fit: cover;">
                                                </div>
                                                <p class="text-muted small">Recommended dimensions: 1280x720</p>
                                                <button type="button" class="btn btn-primary" id="LessonThumbnailUploadBtn" data-bs-toggle="modal"
                                                        data-bs-target="#imageUploadModal">
                                                    <i class="bi bi-upload me-1"></i> Upload
                                                </button>
                                            </div>
                                        </div>

                                        <!-- Action Buttons -->
                                        <div class="d-flex justify-content-between mt-4">
                                            <button type="button" class="btn btn-secondary">
                                                <i class="bi bi-x-lg me-1"></i> Cancel
                                            </button>
                                            <button type="button" class="btn btn-danger">
                                                <i class="bi bi-trash me-1"></i> Delete
                                            </button>
                                            <button type="button" id="btn-Submit-TrainingOutline" class="btn btn-primary">
                                                <i class="bi bi-arrow-repeat me-1"></i> Update
                                            </button>
                                        </div>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>




                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Image Upload -->
<div class="modal fade" id="imageUploadModal" tabindex="-1" aria-labelledby="imageUploadModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-md">
        <!-- medium size -->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageUploadModalLabel">Upload Outline Thumbnail</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <form id="imageUploadForm" novalidate>
                    <div id="dropArea" tabindex="0">
                        <p class="mb-2">Drag & Drop an image here or click to select</p>
                        <p class="mb-2">Recommended: 1280x720</p>
                        <i class="bi bi-cloud-arrow-up fs-1 text-primary"></i>
                        <input type="file" name="Post-image-Thumbnail" id="Post-image-Thumbnail" accept="image/*"
                               style="display:none" />
                        <div id="previewContainer" class="mt-3" style="display:none;">
                            <img id="imagePreview" src="" alt="Image Preview" class="img-fluid rounded"
                                 style="max-height: 200px;" />
                            <button type="button" class="btn btn-sm btn-danger mt-2"
                                    id="removeImageBtn">
                                Remove
                            </button>
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="uploadBtn" disabled>Upload</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section scripts {

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Quill JS -->
    <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>

    <script src="~/scripts/tariningDetails/TrainingOutline/index.js" asp-append-version="true"></script>
    <script src="~/scripts/tariningDetails/TrainingOutline/create.js" asp-append-version="true"></script>
}

