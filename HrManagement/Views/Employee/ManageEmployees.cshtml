                                                            <select class="form-select form-control" id="position" name="position" data-control="select2" data-placeholder="Select Position" data-allow-clear="true">
                                                                <option></option>
                                                            </select>
                                                            <span class="col-sm-5 mt-2 messages"></span>
                                                        </div>
                                                    </div>
