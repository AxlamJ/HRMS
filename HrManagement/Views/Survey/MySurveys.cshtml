@{
    ViewData["Title"] = "My Surveys";
}
@section PageCSS {

    <style>
        .text-green {
            color: green;
        }

        .text-red {
            color: red;
        }
    </style>

}

@*<!--start:::Main--> *@
<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
    @*<!--begin::Content wrapper--> *@
    <div class="d-flex flex-column flex-column-fluid">
        @* <!--begin::Toolbar--> *@
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <!--begin::Toolbar container-->
            <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
                <!--begin::Page title-->
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <!--begin::Title-->
                    @* <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0"></h1> *@
                    <!--end::Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page title-->
            </div>
            <!--end::Toolbar container-->
        </div>
        @* <!--end::Toolbar--> *@
        @*<!--begin::Content--> *@
        <div id="kt_app_content" class="app-content flex-column-fluid">
            @*<!--begin::Content container--> *@
            <div id="kt_app_content_container" class="app-container container-fluid">
                <div class="container-fluid" id="app-content-container-fluid">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                                    <div class="mb-3 form-group">
                                        <label class="form-label">Search Survey</label>
                                        <input type="text" class="form-control" name="Name" id="Name" placeholder="Enter the Name of Survey to Search">
                                        <span class="col-sm-5 mt-2 messages"></span>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                                    <div class="mb-3 form-group">
                                        <label class="form-label">Status</label>
                                        <select class="form-select form-control" id="Status" name="Status" data-control="select2" data-placeholder="Select Status" data-allow-clear="true" disabled>
                                            <option></option>
                                            <option value="Active" selected>Active</option>
                                            <option value="Inactive">Inactive</option>
                                            <option value="Archive">Archive</option>
                                            <option value="Complete">Complete</option>
                                        </select>
                                        <span class="col-sm-5 mt-2 messages"></span>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-12 mb-3 d-none">
                                    <div class="mb-3 form-group">
                                        <label class="form-label">Start Date</label>
                                        <input class="form-control date-picker" placeholder="From" id="PublishDate" name="PublishDate" />
                                        <span class="col-sm-5 mt-2 messages"></span>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-12 mb-3 d-none">
                                    <div class="mb-3 form-group">
                                        <label class="form-label">End Date</label>
                                        <input class="form-control date-picker" placeholder="To" id="CompletionDate" name="CompletionDate" />
                                        <span class="col-sm-5 mt-2 messages"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="d-flex justify-content-end text-end gap-5">
                                    <span class="btn btn-secondary float-end" id="btnClear">
                                        <i class="fa fa-times fs-4 me-2"></i>
                                        Clear
                                    </span>
                                    <span class="btn btn-primary float-end" id="btnSearch">
                                        <i class="fa fa-search  fs-4 me-2"></i>
                                        Search
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <div id="table-default" class="table-responsive">
                                <table class="table table-striped table-bordered gy-5 gs-7 rounded" id="tbl_Mysurveys">
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {

    <script src="@Url.Content("/lib/jquery/jquery.min.js")" type="text/javascript"></script>
    <script src="~/assets/plugins/global/plugins.bundle.js"></script>
    <script src="~/assets/js/scripts.bundle.js"></script>
    <script src="~/assets/js/widgets.bundle.js"></script>
    <script src="~/assets/js/custom/widgets.js"></script>
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="~/scripts/ellipsis.min.js"></script>
    <script src="@Url.Content("/scripts/Survey/MySurveys.js")" asp-append-version="true"></script>

    <script>
        var curPage = "MySurveys";
        var DropDownsData = {};
        @if (ViewBag.DropDownData != null)
        {
            <text>
                            DropDownsData = @(Html.Raw(Json.Serialize(ViewBag.DropDownData)))
            </text>
        }
    </script>
}