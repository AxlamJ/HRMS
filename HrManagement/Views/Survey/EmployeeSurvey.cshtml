        @* <!--end::Toolbar--> *@
        @*<!--begin::Content--> *@
        <div id="kt_app_content" class="app-content flex-column-fluid">
            @*<!--begin::Content container--> *@
            <div id="kt_app_content_container" class="app-container container-fluid">
                <div class="container-fluid" id="app-content-container-fluid">
                    <div class="card mb-3">
                        <div class="card">
                            <div class="card-body">
                                <form id="employeeSurveyForm">
                                    <h3 id="surveyTitle">Employee Survey</h3>
                                    <p id="surveyDescription"></p>
                                    <div id="surveyQuestionsContainer"></div>
                                </form>
                            </div>
                            <div class="card-footer">
                                <div class="row">
                                    <div class="justify-content-end text-end">
                                        <button id="submitSurvey" class="btn btn-success float-end">
                                            <i class="fa fa-save fs-4 me-2"></i>
