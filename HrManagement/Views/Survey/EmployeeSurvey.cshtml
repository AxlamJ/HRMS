@{
    ViewData["Title"] = "Employee Survey";

    var loggedInEmployeeCode = 0;
    if (ViewBag.LoggedInEmployeeCode != null)
    {
        loggedInEmployeeCode = Convert.ToInt32(ViewBag.LoggedInEmployeeCode);
    }

}

<style>
    .help-block.error {
        margin-bottom: 5px;
    }

    .has-error {
        color: red;
    }

    .has-error .form-control {
        border-color: red;
        -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
    }

    .slider-value {
        font-size: 18px;
        font-weight: bold;
        color: #007bff;
    }

    .rating-container {
        display: flex;
        gap: 10px;
        cursor: pointer;
    }

    .rating-item {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .rating-label {
        font-size: 14px;
        font-weight: bold;
        margin-top: 5px;
    }

    .rating-icon {
        font-size: 30px;
        cursor: pointer;
        transition: color 0.2s ease-in-out, filter 0.2s ease-in-out;
        color: gray; /* Default color */
    }

    /* Smiley needs a filter to change its color */
    .rating-icon.smiley-icon {
        filter: grayscale(100%) brightness(50%);
    }

    .rating-icon.smiley-icon.selected {
        filter: grayscale(0%) brightness(100%);
    }

    /* Thumbs-up needs SVG fill to change color */
    .rating-icon.thumb-icon svg {
        fill: gray;
    }

    .rating-icon.selected {
        color: #FFD700 !important; /* Gold */
    }

    /* Smiley should match this color */
    .rating-icon.smiley-icon {
        filter: grayscale(100%) brightness(50%);
    }

        .rating-icon.smiley-icon.selected {
            filter: grayscale(0%) brightness(120%);
        }

    /* Thumbs-up uses SVG fill */
    .rating-icon.thumb-icon svg {
        fill: gray;
    }

    .rating-icon.selected.thumb-icon svg {
        fill: #FFD700; /* Gold */
    }

    .rating-icon.heart-icon {
        font-size: 30px;
        cursor: pointer;
        transition: color 0.2s ease-in-out;
        color: gray; /* Default color */
    }

    .rating-icon.heart-icon.selected {
        color: red !important; /* Red color when selected */
    }

</style>

