@{
    ViewData["Title"] = "Create New Survey";
}

<style>
    .help-block.error {
        margin-bottom: 5px;
    }

    .has-error {
        color: red;
    }

        .has-error .form-control {
            border-color: red;
            -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
        }
</style>

<!-- Modal to Select Question Type -->
<div id="questionTypeModal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Select Question Type</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <select id="questionType" class="form-control">
                    <option value="">Select Question Type</option>
                    <option value="Single Select">Single Select</option>
                    <option value="Multi Select">Multi Select</option>
                    <option value="Single Text Box">Single Text Box</option>
                    <option value="Multi Text Box">Multi Text Box</option>
                    <option value="Slider">Slider</option>
                    <option value="Rating">Rating</option>
                </select>
            </div>
            <div class="modal-footer">
                <button type="button" id="addQuestionType" class="btn btn-primary">Add</button>
            </div>
        </div>
    </div>
</div>

@*<!--start:::Main--> *@
<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
    @*<!--begin::Content wrapper--> *@
    <div class="d-flex flex-column flex-column-fluid">
        @* <!--begin::Toolbar--> *@
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <!--begin::Toolbar container-->
            <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
                <!--begin::Page title-->
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <!--begin::Title-->
                    @* <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0"></h1> *@
                    <!--end::Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page title-->
            </div>
            <!--end::Toolbar container-->
        </div>
        @* <!--end::Toolbar--> *@
        @*<!--begin::Content--> *@
        <div id="kt_app_content" class="app-content flex-column-fluid">
            @*<!--begin::Content container--> *@
            <div id="kt_app_content_container" class="app-container container-fluid">
                <div class="container-fluid" id="app-content-container-fluid">
                    <div class="card mb-3">
                        <div class="card">
                            <div class="card-body">
                                <form id="create-survey-form" novalidate>
                                    <div class="row" style="margin-bottom: 10px;">
                                        <h4 class="text-primary text-uppercase font-weight-bold">Name you survey</h4>
                                    </div>
                                    <div class="card NameYourSurvey">
                                        <div class="row" style="margin:5px;">
                                            <div class="col-lg-4 col-md-4 col-sm-12 mb-3" style="margin-top: 15px;">
                                                <div class="mb-3 form-group">
                                                    <label class="form-label">Give your survey a friendly name</label>
                                                    <span style="color:red" class="label-staric">*</span>
                                                    <input type="text" class="form-control" name="Name" id="Name" placeholder="Employee Engagement Survey">
                                                    <span class="col-sm-5 mt-2 messages"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-md-12 col-sm-12 mb-3">
                                                <div class="mb-3 form-group">
                                                    <label class="form-label">Give it a meaningful description</label>
                                                    <textarea class="form-control" name="Description" id="Description" placeholder="Employee Engagement Survey"></textarea>
                                                    <span class="col-sm-5 mt-2 messages"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" style="margin-bottom: 10px; margin-top:20px;">
                                        <h4 class="text-primary text-uppercase font-weight-bold">Configure you survey</h4>
                                    </div>
                                    <div class="card ConfigureYouSurvey">
                                        <div class="row" style="margin:5px;">
                                            <div class="col-12 mb-4" style="margin-top: 15px;">
                                                <h6 class="text-uppercase font-weight-bold">Set the status</h6>
                                            </div>
                                            <div class="col-lg-4 col-md-4 col-sm-12 mb-3">
                                                <div class="mb-3 form-group">
                                                    <label class="form-label">Status</label>
                                                    <span style="color:red" class="label-staric">*</span>
                                                    <select class="form-select form-control" id="Status" name="Status" data-control="select2" data-placeholder="Select Status" data-allow-clear="true">
                                                        <option></option>
                                                        <option value="Active">Active</option>
                                                        <option value="Inactive">Inactive</option>
                                                        <option value="Archive">Archive</option>
                                                        <option value="Complete">Complete</option>
                                                    </select>
                                                    <span class="col-sm-5 mt-2 messages"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row" style="margin:5px;">
                                            <div class="col-12 mb-4 mt-4">
                                                <h6 class="text-uppercase font-weight-bold">Schedule the survey</h6>
                                            </div>
                                            <div class="col-lg-4 col-md-4 col-sm-12 mb-3">
                                                <div class="form-group form-check mb-3">
                                                    <input type="checkbox" class="form-check-input" id="IsRecurring" name="IsRecurring" value="1" data-bind="checked: is_recurring">
                                                    <label class="custom-control-label" for="is_recurring">Is this survey recurring?</label>
                                                    <span class="text-primary helper-icon" data-toggle="popover" data-placement="top" data-content="If survey already has responses then impossible to change this option." data-original-title="" title=""><i class="fas fa-question-circle"></i></span>
                                                </div>
                                            </div>
                                            <div id="RecursionDiv" class="col-lg-4 col-md-4 col-sm-12 mb-3" style="display: none;">
                                                <div class="mb-3 form-group">
                                                    <label class="form-label">How Often?</label>
                                                    <select class="form-select form-control" id="Recursion" name="Recursion" data-control="select2" data-placeholder="Select Recursion" data-allow-clear="true">
                                                        <option></option>
                                                        <option value="Weekly">Weekly</option>
                                                        <option value="Monthly">Monthly</option>
                                                        <option value="Quarterly">Quarterly</option>
                                                        <option value="Biannually">Biannually</option>
                                                        <option value="Annually">Annually</option>
                                                    </select>
                                                    <span class="col-sm-5 mt-2 messages"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row" style="margin:5px;">
                                            <div class="col-lg-4 col-md-4 col-sm-12 mb-3">
                                                <div class="mb-3 form-group">
                                                    <label class="form-label">Publish Day</label>
                                                    <span style="color:red" class="label-staric">*</span>
                                                    <input class="form-control date-picker" placeholder="Pick a date" id="PublishDate" name="PublishDate" />
                                                    <span class="col-sm-5 mt-2 messages"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-4 col-md-4 col-sm-12 mb-3">
                                                <div class="mb-3 form-group">
                                                    <label class="form-label">Completion Date</label>
                                                    <input class="form-control date-picker" placeholder="Pick a date" id="CompletionDate" name="CompletionDate" />
                                                    <span class="col-sm-5 mt-2 messages"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row" style="margin:5px;">
                                            <div class="col-12 mb-4 mt-4">
                                                <h6 class="text-uppercase font-weight-bold">Assign the survey</h6>
                                            </div>
                                            <div class="col-lg-4 col-md-4 col-sm-12 mb-3">
                                                <div class="mb-3 form-group">
                                                    <label class="form-label">Select Site</label>
                                                    <select class="form-select form-control" id="SiteId" name="SiteId" data-control="select2" data-placeholder="Select Site" data-allow-clear="true">
                                                        <option></option>
                                                    </select>
                                                    <span class="col-sm-5 mt-2 messages"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-4 col-md-4 col-sm-12 mb-3">
                                                <div class="mb-3 form-group">
                                                    <label class="form-label">Department</label>
                                                    <select class="form-select form-control" id="DepartmentId" name="DepartmentId" data-control="select2" data-placeholder="Select Department" data-allow-clear="true">
                                                        <option></option>
                                                    </select>
                                                    <span class="col-sm-5 mt-2 messages"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-4 col-md-4 col-sm-12 mb-3">
                                                <div class="mb-3 form-group">
                                                    <label class="form-label">Select Employee</label>
                                                    <select class="form-select form-control mt-multiselect" multiple id="EmployeeCode" name="EmployeeCode" data-control="select2" data-placeholder="Select Employee" data-allow-clear="true">
                                                        <option></option>
                                                    </select>
                                                    <span class="col-sm-5 mt-2 messages"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" style="margin-bottom: 10px;; margin-top:20px;">
                                        <h4 class="text-primary text-uppercase font-weight-bold">Add Questions</h4>
                                    </div>
                                    <div class="card AddQuestions">
                                        <div class="row" style="margin:5px;">
                                            <button type="button" class="btn btn-primary addQuestionBtn addTopButton" style="margin-top:15px;">Add Question</button>
                                            <div id="questionsContainer" style="margin:5px;" class="mt-4"></div>
                                            <button type="button" class="btn btn-primary addQuestionBtn addBottomButton" style="margin-bottom:20px; display:none">Add Question</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer">
                                <div class="row">
                                    <div class="justify-content-end text-end">
                                        <span href="#" class="btn btn-primary float-end" id="create-survey">
                                            <i class="fa fa-save fs-4 me-2"></i>
                                            Save
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script src="~/assets/plugins/global/plugins.bundle.js"></script>
    <script src="~/assets/js/scripts.bundle.js"></script>
    <script src="~/assets/js/widgets.bundle.js"></script>
    <script src="~/assets/js/custom/widgets.js"></script>
    <script src="@Url.Content("/scripts/Survey/CreateSurvey.js")" asp-append-version="true"></script>
    <script src="@Url.Content("/js/validate.min.js")"></script>

    <script>
        var curPage = "CreateNewSurvey";

        var DropDownsData = {};
        @if (ViewBag.DropDownData != null)
        {
            <text>
                    DropDownsData = @(Html.Raw(Json.Serialize(ViewBag.DropDownData)))
            </text>
        }
    </script>
}
