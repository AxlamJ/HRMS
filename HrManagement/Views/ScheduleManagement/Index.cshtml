@{
    ViewData["Title"] = "Manage Schedule";
}
@section PageCSS {
    <link href="~/assets/plugins/custom/prismjs/prismjs.bundle.css" rel="stylesheet" />
    <link href="~/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" />
    <style>
        .help-block.error {
            margin-bottom: 5px;
        }

        .has-error {
            color: red;
        }

            .has-error .form-control {
                border-color: red;
                -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
                box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
            }
    </style>
}

@*<!--start:::Main--> *@
<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
    @*<!--begin::Content wrapper--> *@
    <div class="d-flex flex-column flex-column-fluid">
        @* <!--begin::Toolbar--> *@
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <!--begin::Toolbar container-->
            <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
                <!--begin::Page title-->
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <!--begin::Title-->
                    @* <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0"></h1> *@
                    <!--end::Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page title-->
            </div>
            <!--end::Toolbar container-->
        </div>
        @* <!--end::Toolbar--> *@
        @*<!--begin::Content--> *@
        <div id="kt_app_content" class="app-content flex-column-fluid">
            @*<!--begin::Content container--> *@
            <div id="kt_app_content_container" class="app-container container-fluid">
                <div class="container-fluid" id="app-content-container-fluid">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                                    <div class="mb-3 form-group">
                                        <label class="form-label">Employee</label>
                                        <select class="form-select form-control" id="employeefilter" name="employeefilter" data-control="select2" data-close-on-select="false" data-placeholder="Select Employee" data-allow-clear="true">
                                            <option></option>
                                        </select>
                                        <span class="col-sm-5 mt-2 messages"></span>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                                    <div class="mb-3 form-group">
                                        <label class="form-label">Start Date</label>
                                        <input class="form-control date-picker" placeholder="Pick a date" id="startdate" name="startdate" />
                                        <span class="col-sm-5 mt-2 messages"></span>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                                    <div class="mb-3 form-group">
                                        <label class="form-label">End Date</label>
                                        <input class="form-control date-picker" placeholder="Pick a date" id="enddate" name="enddate" />
                                        <span class="col-sm-5 mt-2 messages"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">

                            <div class="row">
                                <div class="d-flex justify-content-end text-end gap-5">
                                    <span class="btn btn-secondary float-end" id="btnClear">
                                        <i class="fa fa-times fs-4 me-2"></i>
                                        Clear
                                    </span>
                                    <span class="btn btn-primary float-end" id="btnSearch">
                                        <i class="fa fa-search  fs-4 me-2"></i>
                                        Search
                                    </span>
                                </div>
                            </div>

                            <div class="btn-list justify-content-end">
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="justify-content-end text-end">
                                    <span type="button" id="btn-createschedule" class="btn btn-primary float-end" data-bs-toggle="modal" data-bs-target="#Add_Schedule_Modal">
                                        <i class="fas fa-plus fs-4 me-2"></i>Create Schedule
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div id="table-default" class="table-responsive">
                                    <table class="table table-striped table-bordered gy-5 gs-7 rounded" id="tbl_manageschedule">
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="Add_Schedule_Modal" data-bs-backdrop="static" data-bs-focus="true" tabindex="-1" aria-hidden="true">
    <!--begin::Modal dialog-->
    <div class="modal-dialog modal-dialog-centered mw-850px">
        <!--begin::Modal content-->
        <div class="modal-content">
            <!--begin::Modal header-->
            <div class="modal-header">
                <!--begin::Modal title-->
                <h2 id="modal-title">Create Schedule</h2>
                <!--end::Modal title-->
                <!--begin::Close-->
                <div class="btn btn-sm btn-icon btn-active-color-primary btn-dismiss-modal" data-bs-dismiss="modal">
                    <i class="ki-duotone ki-cross fs-1">
                        <span class="path1"></span>
                        <span class="path2"></span>
                    </i>
                </div>
                <!--end::Close-->
            </div>
            <!--end::Modal header-->
            <!--begin::Modal body-->
            <div class="modal-body mx-5" style="padding-top: 0px !important;">
                <!--begin::Form-->
                <form id="schedule-form" novalidate>
                    <div class="row mt-10">
                        <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
                            <div class="mb-3 form-group">
                                <label class="form-label">Employee</label>
                                <select class="form-select form-control" id="employee" name="employee" data-control="select2" data-close-on-select="false" data-placeholder="Select Employee" data-allow-clear="true" data-dropdown-parent="#Add_Schedule_Modal">
                                    <option></option>
                                </select>
                                <span class="col-sm-5 mt-2 messages"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
                            <div class="mb-3 form-group">
                                <label class="form-label">Site</label>
                                <select class="form-select form-control" id="site" name="site" data-control="select2" data-close-on-select="false" data-placeholder="Select Site" data-allow-clear="true" data-dropdown-parent="#Add_Schedule_Modal">
                                    <option></option>
                                </select>
                                <span class="col-sm-5 mt-2 messages"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
                            <div class="mb-3 form-group">
                                <label class="form-label">Date Start</label>
                                <input class="form-control date-picker" placeholder="Pick a date" id="date-start" name="date-start" />
                                <span class="col-sm-5 mt-2 messages"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
                            <div class="mb-3 form-group">
                                <label class="form-label">Date End</label>
                                <input class="form-control date-picker" placeholder="Pick a date" id="date-end" name="date-end" />
                                <span class="col-sm-5 mt-2 messages"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
                            <div class="mb-3 form-group">
                                <label class="form-label">Start Time</label>
                                <input class="form-control date-picker" placeholder="Pick Time" id="start-time" name="start-time" />
                                <span class="col-sm-5 mt-2 messages"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
                            <div class="mb-3 form-group">
                                <label class="form-label">End Time</label>
                                <input class="form-control date-picker" placeholder="Pick Time" id="end-time" name="end-time" />
                                <span class="col-sm-5 mt-2 messages"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
                            <div class="mb-3 form-group">
                                <label class="form-label">Days On</label>
                                <select class="form-select form-control" id="days_on" name="days_on" data-control="select2" data-close-on-select="false" data-placeholder="Select Days On" data-allow-clear="true" multiple="multiple" data-dropdown-parent="#Add_Schedule_Modal">
                                    <option></option>
                                    <option value="1">Monday</option>
                                    <option value="2">Tuesday</option>
                                    <option value="3">Wednesday</option>
                                    <option value="4">Thursday</option>
                                    <option value="5">Friday</option>
                                    <option value="6">Saturday</option>
                                    <option value="7">Sunday</option>
                                </select>
                                <span class="col-sm-5 mt-2 messages"></span>
                            </div>
                        </div>
                    </div>

                </form>
                <!--end::Form-->
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="d-flex justify-content-end text-end gap-5">
                        <button type="button" class="btn btn-secondary me-3 btn-discard float-end" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary btn-create-schedule float-end">Create Schedule</button>
                    </div>
                </div>

            </div>
            <!--end::Modal body-->
        </div>
        <!--end::Modal content-->
    </div>
    <!--end::Modal dialog-->
</div>

@section scripts {


    <script src="@Url.Content("/lib/jquery/jquery.min.js")" type="text/javascript"></script>
    <script src="~/assets/plugins/global/plugins.bundle.js"></script>
    <script src="~/assets/js/scripts.bundle.js"></script>
    <script src="~/assets/js/widgets.bundle.js"></script>
    <script src="~/assets/js/custom/widgets.js"></script>
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="~/scripts/ellipsis.min.js"></script>

    <script src="~/scripts/schedulemanagement/manage-schedule.js" asp-append-version="true"></script>
    <script src="~/scripts/schedulemanagement/create-schedule.js" asp-append-version="true"></script>



    <script>
        var curPage = "ManageSchedule";
        var DropDownsData = {};
        @if (ViewBag.DropDownData != null)
        {
            <text>
                     DropDownsData = @(Html.Raw(Json.Serialize(ViewBag.DropDownData)))
            </text>
        }
    </script>
}
