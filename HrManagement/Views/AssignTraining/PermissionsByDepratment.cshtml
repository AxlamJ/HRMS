@{
    ViewData["Title"] = "Create News Feed";
}

@section PageCSS {
    <link href="~/lib/summernote/summernote-lite.min.css" rel="stylesheet" />
    <style>
        .help-block.error {
            margin-bottom: 5px;
        }

        .has-error {
            color: red;
        }

            .has-error .form-control {
                border-color: red;
                -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
                box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
            }
    </style>
}


@*<!--start:::Main--> *@
<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
    @*<!--begin::Content wrapper--> *@
    <div class="d-flex flex-column flex-column-fluid">
        @* <!--begin::Toolbar--> *@
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <!--begin::Toolbar container-->
            <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
                <!--begin::Page title-->
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <!--begin::Title-->
                    @* <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0"></h1> *@
                    <!--end::Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page title-->
            </div>
            <!--end::Toolbar container-->
        </div>
        @* <!--end::Toolbar--> *@
        @*<!--begin::Content--> *@
        <div id="kt_app_content" class="app-content flex-column-fluid">
            @*<!--begin::Content container--> *@
            <div id="kt_app_content_container" class="app-container container-fluid">
                <div class="container-fluid" id="app-content-container-fluid">
                    <div class="card mb-3">
                        <div class="card">
                            <div class="card-body">
                                <form id="add-news-form" novalidate>
                                    <div class="row my-6">
                                       
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4 col-sm-12 mb-3" id="Trainings-dd">
                                            <div class="mb-3 form-group">
                                                <label class="form-label">Trainings</label>
                                                <select class="form-select form-control" id="Trainings" name="Trainings" data-control="select2" data-close-on-select="false" data-placeholder="Select Sites" data-allow-clear="true">
                                                    <option></option>
                                                </select>
                                                <span class="col-sm-5 mt-2 messages"></span>
                                            </div>
                                        </div>
                                        <div id="departmentSection" class="col-lg-4 col-md-4 col-sm-12 mb-3 d-none">
                                            <div class="mb-3 form-group">
                                                <label class="form-label">Visible To</label>
                                                <select class="form-select form-control" id="visible-to" name="visible-to" data-control="select2" data-close-on-select="false" data-placeholder="Select Visible To" data-allow-clear="true">
                                                    <option></option>
                                                    <option value="all">All</option>
                                                    <option value="departments">Departments</option>
                                                    <option value="employees">Employees</option>
                                                    <option value="sites">Sites</option>
                                                </select>
                                                <span class="col-sm-5 mt-2 messages"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 col-md-4 col-sm-12 mb-3 d-none" id="departments-dd">
                                            <div class="mb-3 form-group">
                                                <label class="form-label">Departments</label>
                                                <select class="form-select form-control" id="departments" name="departments" data-control="select2" data-close-on-select="false" data-placeholder="Select Departments" data-allow-clear="true" multiple>
                                                    <option></option>
                                                </select>
                                                <span class="col-sm-5 mt-2 messages"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 col-md-4 col-sm-12 mb-3 d-none" id="department-sub-category-dd">
                                            <div class="mb-3 form-group">
                                                <label class="form-label">Department Sub-Category</label>
                                                <select class="form-select form-control" id="department-sub-category" name="department-sub-category" data-control="select2" data-placeholder="Select Sub-Category" multiple data-allow-clear="true">
                                                    <option></option>
                                                </select>
                                                <span class="col-sm-5 mt-2 messages"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 col-md-4 col-sm-12 mb-3 d-none" id="employees-dd">
                                            <div class="mb-3 form-group">
                                                <label class="form-label">Employees</label>
                                                <select class="form-select form-control" id="employees" name="employees" data-control="select2" data-close-on-select="false" data-placeholder="Select Employees" data-allow-clear="true" multiple>
                                                    <option></option>
                                                </select>
                                                <span class="col-sm-5 mt-2 messages"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 col-md-4 col-sm-12 mb-3 d-none" id="sites-dd">
                                            <div class="mb-3 form-group">
                                                <label class="form-label">Sites</label>
                                                <select class="form-select form-control" id="sites" name="sites" data-control="select2" data-close-on-select="false" data-placeholder="Select Sites" data-allow-clear="true" multiple>
                                                    <option></option>
                                                </select>
                                                <span class="col-sm-5 mt-2 messages"></span>
                                            </div>
                                        </div>
                                        
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer">

                                <div class="row">
                                    <div class="justify-content-end text-end">
                                        <span href="#" class="btn btn-primary float-end" id="add-news-feed">
                                            <i class="fa fa-save fs-4 me-2"></i>
                                            Submit
                                        </span>
                                    </div>
                                </div>
                                @*                                 <div class="btn-list justify-content-right">
                                    <span href="#" class="btn btn-primary btn-list" id="add-update-site">
                                        <i class="fa fa-save"></i>
                                        Save
                                    </span>
                                </div> *@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    @* <script src="@Url.Content("/lib/jquery/jquery.min.js")" type="text/javascript"></script> *@
    <script src="~/assets/plugins/global/plugins.bundle.js"></script>
    <script src="~/assets/js/scripts.bundle.js"></script>
    <script src="~/assets/js/widgets.bundle.js"></script>
    <script src="~/assets/js/custom/widgets.js"></script>
    <script src="~/lib/summernote/summernote-lite.min.js"></script>
    <script src="@Url.Content("/scripts/AssignTraining/createnewsfeed.js")" asp-append-version="true"></script>
    <script src="@Url.Content("/js/validate.min.js")"></script>
    <script>
        var curPage = "CreateNews";

        var DropDownsData = {};
        @if (ViewBag.DropDownData != null)
        {
                <text>
                     DropDownsData = @(Html.Raw(Json.Serialize(ViewBag.DropDownData)))
                </text>
        }
    </script>
}
