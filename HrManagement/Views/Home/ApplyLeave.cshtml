@{
    ViewData["Title"] = "Apply Leave";
}
<style>
    .help-block.error {
        margin-bottom: 5px;
    }

    .has-error {
        color: red;
    }

        .has-error .form-control {
            border-color: red;
            -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
        }
</style>
@*<!--start:::Main--> *@
<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
    @*<!--begin::Content wrapper--> *@
    <div class="d-flex flex-column flex-column-fluid">
        @* <!--begin::Toolbar--> *@
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <!--begin::Toolbar container-->
            <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
                <!--begin::Page title-->
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <!--begin::Title-->
                    @* <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0"></h1> *@
                    <!--end::Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page title-->
            </div>
            <!--end::Toolbar container-->
        </div>
        @* <!--end::Toolbar--> *@
        @*<!--begin::Content--> *@
        <div id="kt_app_content" class="app-content flex-column-fluid">
            @*<!--begin::Content container--> *@
            <div id="kt_app_content_container" class="app-container container-fluid">
                <div class="container-fluid" id="app-content-container-fluid">

                    <div class="row">
                        <div class="col-lg-6 col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Leave Details</h3>
                                </div>
                                <div class="card-body">
                                    <form id="apply-leave-form" novalidate>
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12 mb-3">
                                                <div class="mb-3 form-group">
                                                    <label class="form-label">Employee Name</label>
                                                    <input type="text" class="form-control" name="employeename" id="employeename" placeholder="Enter Employee Name" disabled="disabled">
                                                    <span class="col-sm-5 mt-2 messages"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12 mb-3">

                                                <div class="mb-3 form-group">
                                                    <label class="form-label">Leave Type</label>
                                                    <select class="form-select form-control" id="leavetype" name="leavetype" data-control="select2" data-placeholder="Select Leave Type" data-allow-clear="true">
                                                        <option></option>
                                                    </select>
                                                    <span class="col-sm-5 mt-2 messages"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
                                                <div class="mb-3 form-group">
                                                    <label class="form-label">Date From</label>
                                                    <input class="form-control date-picker" placeholder="Pick a date" id="datefrom" name="datefrom" />
                                                    <span class="col-sm-5 mt-2 messages"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
                                                <div class="mb-3 form-group">
                                                    <label class="form-label">Date To</label>
                                                    <input class="form-control date-picker" placeholder="Pick a date" id="dateto" name="dateto" />
                                                    <span class="col-sm-5 mt-2 messages"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="mb-3 form-group">
                                                    <label class="form-label">Leave Reason</label>
                                                    <textarea type="text" class="form-control resize-none" name="reason" id="reason" placeholder="Enter Leave Reason" rows="5"></textarea>
                                                    <span class="col-sm-5 mt-2 messages"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>

                                <div class="card-footer">
                                    <div class="row">
                                        <div class="justify-content-end text-end">
                                            <span href="#" class="btn btn-primary float-end" id="btn-apply-leave">
                                                <i class="fa fa-save fs-4 me-2"></i>
                                                Apply
                                            </span>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="col-lg-6 col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Leave Status - Jan 2025 to Dec 2025</h3>
                                </div>
                                <div class="card-body">
                                    <table class="table table-bordered table-responsive">
                                        <thead class="bg-gray-400">
                                            <tr>
                                                <th>Leave Type</th>
                                                <th>Assigned</th>
                                                <th>Availed</th>
                                                <th>Balance</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tbl-leaves-count-body">
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts {

    <script src="@Url.Content("/lib/jquery/jquery.min.js")" type="text/javascript"></script>
    <script src="~/assets/plugins/global/plugins.bundle.js"></script>
    <script src="~/assets/js/scripts.bundle.js"></script>
    <script src="~/assets/js/widgets.bundle.js"></script>
    <script src="~/assets/js/custom/widgets.js"></script>
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="~/scripts/ellipsis.min.js"></script>
    <script src="@Url.Content("/js/validate.min.js")"></script>
    <script src="~/scripts/leaves/applyleaves.js" asp-append-version="true"></script>
    <script>
        var curPage = "ApplyLeaves";
        var LeavesData = {};

        @if (ViewBag.LeavesData != null)
        {
            <text>
                  LeavesData = @(Html.Raw(Json.Serialize(ViewBag.LeavesData)))
            </text>
        }

    </script>
}
