@{
    ViewData["Title"] = "Manage Departments";
}

@*<!--start:::Main--> *@
<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
    @*<!--begin::Content wrapper--> *@
    <div class="d-flex flex-column flex-column-fluid">
        @* <!--begin::Toolbar--> *@
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <!--begin::Toolbar container-->
            <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
                <!--begin::Page title-->
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <!--begin::Title-->
                    @* <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0"></h1> *@
                    <!--end::Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page title-->
            </div>
            <!--end::Toolbar container-->
        </div>
        @* <!--end::Toolbar--> *@
        @*<!--begin::Content--> *@
        <div id="kt_app_content" class="app-content flex-column-fluid">
            @*<!--begin::Content container--> *@
            <div id="kt_app_content_container" class="app-container container-fluid">
                <div class="container-fluid" id="app-content-container-fluid">

                    <div class="row">
                        <div class="col-lg-6 col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Departments</h3>
                                    <div class="d-flex align-items-center gap-2 gap-lg-3">
                                        <span type="button" id="btn-create-department" class="btn btn-primary float-end">
                                            <i class="fas fa-plus fs-4 me-2"></i>Create Department
                                        </span>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-12">
                                            <div class="mb-3 form-group">
                                                <label class="form-label">Department Name</label>
                                                <input type="text" class="form-control" name="filter-dept-name" id="filter-dept-name" placeholder="Enter Department Name">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="row">
                                        <div class="d-flex justify-content-end text-end gap-5">
                                            <span class="btn btn-secondary float-end" id="btnClear">
                                                <i class="fa fa-times fs-4 me-2"></i>
                                                Clear
                                            </span>
                                            <span class="btn btn-primary float-end" id="btnSearch">
                                                <i class="fa fa-search  fs-4 me-2"></i>
                                                Search
                                            </span>
                                        </div>
                                    </div>
                                    <div class="btn-list justify-content-end">
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-body">
                                    <div id="table-default" class="table-responsive">
                                        <table class="table table-striped table-bordered gy-5 gs-7 rounded" id="tbl_managedepartments">
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Department Sub-Categories</h3>
                                    <div class="d-flex align-items-center gap-2 gap-lg-3">
                                        <span type="button" class="btn fw-bold btn-primary float-end btn-new-category">
                                            <i class="fas fa-plus fs-4 me-2"></i>Add New Category
                                        </span>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-12">
                                            <div class="mb-3 form-group">
                                                <label class="form-label">Sub-Category Name</label>
                                                <input class="form-control" placeholder="Policy Name" id="subcategoryname" name="subcategoryname" />
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-12">
                                            <div class="mb-3 form-group">
                                                <label class="form-label">Department</label>
                                                <select class="form-select form-control" id="department-id" name="department-id" data-control="select2" data-placeholder="Select Department" data-allow-clear="true">
                                                    <option></option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="row">
                                        <div class="d-flex justify-content-end text-end gap-5">
                                            <span class="btn btn-secondary float-end" id="btnClearCategories">
                                                <i class="fa fa-times fs-4 me-2"></i>
                                                Clear
                                            </span>
                                            <span class="btn btn-primary float-end" id="btnCategoriesSearch">
                                                <i class="fa fa-search  fs-4 me-2"></i>
                                                Search
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-body">
                                    <div id="table-default" class="table-responsive">
                                        <table class="table table-striped table-bordered gy-5 gs-7 rounded" id="tbl_subcategory">
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="add-new-departments-modal" tabindex="-1" aria-modal="true" data-bs-backdrop="static" data-bs-focus="true" role="dialog">
    <div class="modal-dialog modal-dialog-centered mw-500px">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Add New Department</h2>
                <div class="btn btn-sm btn-icon btn-active-color-primary" data-bs-dismiss="modal">
                    <i class="fa fa-times">
                    </i>
                </div>
            </div>
            <div class="modal-body py-lg-10 px-lg-10">
                <form id="add-update-dept-form" novalidate>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="mb-3 form-group">
                                <label class="form-label">Department Name</label>
                                <input type="text" class="form-control" name="dept-name" id="dept-name" placeholder="Enter Department Name">
                                <span class="col-sm-5 mt-2 messages"></span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="justify-content-end d-flex text-end gap-5">
                        <button type="button" class="btn btn-secondary float-end" id="btn-dismiss-modal" data-bs-dismiss="modal">
                            <i class="fa fa-times fs-4 me-2"></i>
                            Cancel
                        </button>
                        <span href="#" class="btn btn-primary float-end" id="add-update-dept">
                            <i class="fa fa-save fs-4 me-2"></i>
                            Submit
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="add-new-sub-category-modal" tabindex="-1" aria-modal="true" data-bs-backdrop="static" data-bs-focus="true" role="dialog">
    <div class="modal-dialog modal-dialog-centered mw-600px">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Add Department Sub-Category</h2>
                <div class="btn btn-sm btn-icon btn-active-color-primary" data-bs-dismiss="modal">
                    <i class="fa fa-times">
                    </i>
                </div>
            </div>
            <div class="modal-body py-lg-10 px-lg-10">
                <form id="sub-category-form" novalidate>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 mb-3">
                            <div class="mb-3 form-group">
                                <label class="form-label">Department</label>
                                <select class="form-select form-control" id="department" name="department" data-control="select2" data-placeholder="Select Department" data-allow-clear="true" data-dropdown-parent="#add-new-sub-category-modal">
                                    <option></option>
                                </select>
                                <span class="col-sm-5 mt-2 messages"></span>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 mb-3">
                            <div class="mb-3 form-group">
                                <label class="form-label">Sub-Category Name</label>
                                <input class="form-control" type="text" placeholder="" name="sub-category-name" id="sub-category-name" autocomplete="off" />
                                <span class="col-sm-5 mt-2 messages"></span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="justify-content-end d-flex text-end gap-5">
                        <button type="button" class="btn btn-secondary float-end" id="btn-dismiss-modal" data-bs-dismiss="modal">
                            <i class="fa fa-times fs-4 me-2"></i>
                            Cancel
                        </button>
                        <button type="button" class="btn btn-primary float-end" id="btn-add-new-sub-category">
                            <i class="fa fa-save fs-4 me-2"></i>
                            Submit
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts {

    <script src="@Url.Content("/lib/jquery/jquery.min.js")" type="text/javascript"></script>
    <script src="~/assets/plugins/global/plugins.bundle.js"></script>
    <script src="~/assets/js/scripts.bundle.js"></script>
    <script src="~/assets/js/widgets.bundle.js"></script>
    <script src="~/assets/js/custom/widgets.js"></script>
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="~/scripts/ellipsis.min.js"></script>
    <script src="~/scripts/department/managedepartments.js" asp-append-version="true"></script>
    <script src="@Url.Content("/scripts/department/addupdatedepartment.js")" asp-append-version="true"></script>
    <script src="@Url.Content("/js/validate.min.js")"></script>

    <script>
        var curPage = "ManageDepartments";
        var DropDownsData = {};
        @if (ViewBag.DropDownData != null)
        {
            <text>
                    DropDownsData = @(Html.Raw(Json.Serialize(ViewBag.DropDownData)))
            </text>
        }
    </script>
}