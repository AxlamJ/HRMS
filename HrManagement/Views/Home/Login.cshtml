    <script src="@Url.Content("/assets/js/scripts.bundle.js")"></script>
    <script src="@Url.Content("/src/js/components/blockui.js")"></script>
    <script src="@Url.Content("/src/js/components/menu.js")"></script>
    <script src="@Url.Content("/scripts/common-theme.js")"></script>
    <script src="@Url.Content("/assets/js/widgets.bundle.js")"></script>
    <script src="@Url.Content("/assets/js/custom/widgets.js")"></script>
    <script src="@Url.Content("/assets/plugins/custom/datatables/datatables.bundle.js")"></script>
    <script src="@Url.Content("/scripts/ellipsis.min.js")"></script>
    <script src="@Url.Content("/scripts/multiselect/multiple-select.min.js")"></script>
    <script src="@Url.Content("/lib/jquery/jquery.slim.min.js")"></script>
    <script src="@Url.Content("/js/util.js")"></script>
    <script src="@Url.Content("/dist/js/prism.js")"></script>
    <script src="@Url.Content("/js/common-ajax.js")"></script>
    <script src="@Url.Content("/js/validate.min.js")"></script>
    <script src="@Url.Content("/scripts/authentication/login.js")"></script>
</body>
