@{
    ViewData["Title"] = "My Schedule";
}
@section PageCSS {
    <link href="~/assets/css/scheduler.css" rel="stylesheet" />
}

<style>
    .buttons-inner {
        flex-wrap: wrap;
    }

    .buttons-outer {
        align-items: flex-start;
    }

    .fc-resource-timeline-divider {
        resize: none !important;
        pointer-events: none;
    }

    .fc-datagrid-cell-frame {
        width: 250px !important;
    }

    .fc-datagrid-cell-main {
        text-wrap: auto !important;
    }

    .fc-daygrid-event {
          white-space: normal;
    }

    .fc-event-time{
        display: none !important;
    }

    .fc .fc-event{
        min-height: 40px !important;
    }
</style>
@*<!--start:::Main--> *@
<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
    @*<!--begin::Content wrapper--> *@
    <div class="d-flex flex-column flex-column-fluid">
        @* <!--begin::Toolbar--> *@
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <!--begin::Toolbar container-->
            <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
                <!--begin::Page title-->
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <!--begin::Title-->
                    @* <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0"></h1> *@
                    <!--end::Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page title-->
            </div>
            <!--end::Toolbar container-->
        </div>
        @* <!--end::Toolbar--> *@
        @*<!--begin::Content--> *@
        <div id="kt_app_content" class="app-content flex-column-fluid">
            @*<!--begin::Content container--> *@
            <div id="kt_app_content_container" class="app-container container-fluid">
                <div class="container-fluid px-0" id="app-content-container-fluid">
                    <div class="row px-0 align-items-center" id="exit-full-screen-row" style="display: none;">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 text-end px-1 gap-5">
                            <button type="button" class="btn btn-primary" onclick="ExitFullScreen()">
                                <i class="fs-4 fa-solid fa-down-left-and-up-right-to-center me-2"></i>
                                Exit Full Screen
                            </button>
                        </div>
                    </div>

                    <!--begin::Card-->
                    <div id="filters-card-row" class="card">
                        <!--begin::Card body-->
                        <div class="card-body">
                            <!--begin::Form-->
                            <div class="mx-auto" id="Plannerview_filters">
                                <!--begin::Wrapper-->
                                <div class="w-100">
                                    <div class="fv-row">
                                        <!--begin::Row-->
                                        <div class="row">
                                            <div class="col-xs-12 col-sm-12 col-md-3 mb-10">
                                                <label for="employee" class="">Employee</label>
                                                <select class="form-select" data-control="select2" data-placeholder="Select an Employee" id="employee" name="employee" data-allow-clear="true" disabled="disabled">
                                                    <option></option>
                                                </select>
                                            </div>
                                        </div>
                                        <!--end::Row-->
                                    </div>
                                    <!--end::Input group-->
                                </div>
                                <!--end::Wrapper-->
                            </div>
                            <!--end::Form-->
                        </div>
                        <!--end::Card body-->
                        <div class="card-footer">
                            <div class="row p-0 buttons-outer">
                                <div class="d-flex justify-content-start gap-5 buttons-inner" id="nav-screen-buttons" style="max-width: 50%;">
                                    @* dynamic nav buttons here *@
                                    @*  <button type="button" id="btn_kanbanview" class="btn btn-primary float-end">Kanban View</button> *@

                                </div>
                                <div class="d-flex justify-content-end gap-md-5" style="max-width: 50%;">
                                    <button type="button" id="enter-full-screen-btn" class="btn btn-secondary d-none" onclick="EnterFullScreen()">
                                        <i class="fs-4 fa-solid fa-up-right-and-down-left-from-center me-2" id="enter-full-screen-icon"></i>
                                        Full Screen
                                    </button>

                                    <button type="button" id="btn_clear" class="btn btn-secondary float-end">
                                        <i class="fas fa-close fs-4 me-2"></i>Clear
                                    </button>
                                    <button type="button" id="btn_search" class="btn btn-primary float-end">
                                        <i class="fas fa-search fs-4 me-2"></i>Search
                                    </button>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!--end::Card-->

                    <div class="card card-flush my-6 calendar-card">
                        <div class="card-body">
                            <div class="row flex-nowrap">
                                <div class="col">
                                    <div id="calendar">
                                        <!-- Calendar content goes here -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="@Url.Content("/assets/plugins/custom/fullcalendar/index.global.js")"></script>
    @* <script src="@Url.Content("/lib/jquery/jquery.min.js")" type="text/javascript"></script> *@
    <script src="~/assets/plugins/global/plugins.bundle.js"></script>
    <script src="~/assets/js/scripts.bundle.js"></script>
    <script src="~/assets/js/widgets.bundle.js"></script>
    <script src="~/assets/js/custom/widgets.js"></script>

    <script src="@Url.Content("/js/validate.min.js")"></script>
    <script src="@Url.Content("/scripts/scheduling/myschedule.js")" asp-append-version="true"></script>


    <script>
        var curPage = "MySchedule";
        var DropDownsData = {};
        @if (ViewBag.DropDownData != null)
        {
            <text>
                     DropDownsData = @(Html.Raw(Json.Serialize(ViewBag.DropDownData)))
            </text>
        }



    </script>
}
