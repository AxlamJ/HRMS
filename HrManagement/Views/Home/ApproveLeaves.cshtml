@{
    ViewData["Title"] = "My Time";
}
@section PageCSS {
    <link href="~/assets/plugins/custom/prismjs/prismjs.bundle.css" rel="stylesheet" />
    <link href="~/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" />
    <style>
        .help-block.error {
            margin-bottom: 5px;
        }

        .has-error {
            color: red;
        }

            .has-error .form-control {
                border-color: red;
                -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
