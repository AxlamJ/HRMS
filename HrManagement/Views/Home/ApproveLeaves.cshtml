@*<!--start:::Main--> *@
<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
    @*<!--begin::Content wrapper--> *@
    <div class="d-flex flex-column flex-column-fluid">
        @* <!--begin::Toolbar--> *@
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <!--begin::Toolbar container-->
            <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
                <!--begin::Page title-->
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <!--begin::Title-->
                    @* <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0"></h1> *@
                    <!--end::Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page title-->
            </div>
            <!--end::Toolbar container-->
        </div>
        @* <!--end::Toolbar--> *@
        @*<!--begin::Content--> *@
        <div id="kt_app_content" class="app-content flex-column-fluid">
            @*<!--begin::Content container--> *@
            <div id="kt_app_content_container" class="app-container container-fluid">
                <div class="container-fluid" id="app-content-container-fluid">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                                    <div class="mb-3 form-group">
                                        <label class="form-label">Employee</label>
                                        <select class="form-select form-control" id="employee" name="employee" data-control="select2" data-placeholder="Select Employee" data-allow-clear="true">
                                            <option></option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                                    <div class="mb-3 form-group">
                                        <label class="form-label">Leave Type</label>
                                        <select class="form-select form-control" id="leavetype" name="leavetype" data-control="select2" data-placeholder="Select Leave Type" data-allow-clear="true">
                                            <option></option>
                                            <option value="1">Annual Leave</option>
                                            <option value="2">Medical</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                                    <div class="mb-3 form-group">
                                        <label class="form-label">Leave Status</label>
                                        <select class="form-select form-control" id="leavesatatus" name="leavesatatus" data-control="select2" data-placeholder="Select Leave Status" data-allow-clear="true">
                                            <option></option>
                                            <option value="2">Approved</option>
                                            <option value="1">Pending</option>
                                            <option value="3">Rejected</option>
                                        </select>
                                    </div>
                                </div>
                                @* <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                                    <div class="mb-3 form-group">
                                        <label class="form-label">Employee</label>
                                        <select class="form-select form-control" id="employee" name="employee" data-control="select2" data-placeholder="Select Employee" data-allow-clear="true">
                                            <option></option>
                                        </select>
                                    </div>
                                </div> *@
                                <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                                    <div class="mb-3 form-group">
                                        <label class="form-label">Date From</label>
                                        <input class="form-control date-picker" placeholder="Pick a date" id="date-from" name="date-from" />
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                                    <div class="mb-3 form-group">
                                        <label class="form-label">Date To</label>
                                        <input class="form-control date-picker" placeholder="Pick a date" id="date-to" name="date-to" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="d-flex justify-content-end text-end gap-5">
                                    <span class="btn btn-secondary float-end" id="btnClear">
                                        <i class="fa fa-times fs-4 me-2"></i>
                                        Clear
                                    </span>
                                    <span class="btn btn-primary float-end" id="btnSearch">
                                        <i class="fa fa-search  fs-4 me-2"></i>
                                        Search
                                    </span>
                                    <span class="btn btn-primary float-end d-none" id="btn-Export">
                                        <i class="fa fa-file-excel fs-4 me-2"></i>
                                        Export
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <div id="table-default" class="table-responsive">
                                <table class="table table-striped table-bordered gy-5 gs-7 rounded" id="tbl_searchleaves">
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="approve_leave_modal" data-bs-backdrop="static" data-bs-focus="true" tabindex="-1" aria-hidden="true">
    <!--begin::Modal dialog-->
    <div class="modal-dialog modal-dialog-centered mw-850px">
        <!--begin::Modal content-->
        <div class="modal-content">
            <!--begin::Modal header-->
            <div class="modal-header">
                <!--begin::Modal title-->
                <h2 id="modal-title">Approve Leave</h2>
                <!--end::Modal title-->
                <!--begin::Close-->
                <div class="btn btn-sm btn-icon btn-active-color-primary btn-dismiss-modal" data-bs-dismiss="modal">
                    <i class="ki-duotone ki-cross fs-1">
                        <span class="path1"></span>
                        <span class="path2"></span>
                    </i>
                </div>
                <!--end::Close-->
            </div>
            <!--end::Modal header-->
            <!--begin::Modal body-->
            <div class="modal-body mx-5" style="padding-top: 0px !important;">
                <!--begin::Form-->
                <form id="approve-leave-form" novalidate>
                    <div class="row">
                        <div class="col-6">
                            <div class="mb-3 form-group">
                                <input type="text" name="txtleaveid" id="txtleaveid" class="form-control" style="display:none" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="mb-3 form-group">
                                <input type="text" name="txtemployeecode" id="txtemployeecode" class="form-control" style="display:none" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="mb-3 form-group">

                                <label for="employeename" class="required form-label">Employee Name</label>
                                <input type="text" name="txtemployeename" id="txtemployeename" class="form-control" disabled="disabled" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="mb-3 form-group">

                                <label for="leavetype" class="required form-label">Leave Type</label>
                                <input type="text" name="txtleavetype" id="txtleavetype" class="form-control" disabled="disabled" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="mb-3 form-group">

                                <label for="datefrom" class="required form-label">Date From</label>
                                <input type="text" name="txtdatefrom" id="txtdatefrom" class="form-control" disabled="disabled" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="mb-3 form-group">

                                <label for="dateto" class="required form-label">Date To</label>
                                <input type="text" name="txtdateto" id="txtdateto" class="form-control" disabled="disabled" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="mb-3 form-group">

                                <label for="totaldays" class="required form-label">Total Days</label>
                                <input type="text" name="txttotaldays" id="txttotaldays" class="form-control" disabled="disabled" />
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-12">
                            <div class="mb-3 form-group">
                                <label class="form-label">Comments</label>
                                <textarea id="approve-comments" name="approve-comments" class="form-control resize-none" placeholder="Add a new comment" rows="7"></textarea>
                                <span class="col-sm-5 mt-2 messages"></span>
                            </div>
                        </div>
                    </div>
                </form>
                <!--end::Form-->
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="d-flex justify-content-end text-end gap-5">
                        <button type="button" class="btn btn-secondary me-3 btn-discard float-end" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary btn-approve float-end">Approve</button>
                    </div>
                </div>

            </div>
            <!--end::Modal body-->
        </div>
        <!--end::Modal content-->
    </div>
    <!--end::Modal dialog-->
</div>

