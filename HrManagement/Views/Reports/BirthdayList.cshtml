@{
    ViewData["Title"] = "Departments";
}


@*<!--start:::Main--> *@
<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
    <div class="d-flex flex-column flex-column-fluid">
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    </ul>
                </div>
            </div>
        </div>
        <div id="kt_app_content" class="app-content flex-column-fluid">
            <div id="kt_app_content_container" class="app-container container-fluid">
                <div class="container-fluid" id="app-content-container-fluid">

                    <div class="row gy-5 g-xl-1 mt-5">
                        <div class="card card-flush">
                            <div class="card-body pt-4">
                                <div class="row">
                                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                        <div class="mb-3 form-group">
                                            <label class="form-label">First Name</label>
                                            <input class="form-control" id="firstname" name="firstname" />
                                            <span class="col-sm-5 mt-2 messages"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                        <div class="mb-3 form-group">
                                            <label class="form-label">Last Name</label>
                                            <input class="form-control" id="lastname" name="lastname" />
                                            <span class="col-sm-5 mt-2 messages"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                        <div class="mb-3 form-group">
                                            <label class="form-label">Month</label>
                                            <select class="form-select form-control" id="month" name="month" data-control="select2" data-close-on-select="false" data-placeholder="Select Month" data-allow-clear="true">
                                                <option></option>
                                                <option value="1">January</option>
                                                <option value="2">February</option>
                                                <option value="3">March</option>
                                                <option value="4">April</option>
                                                <option value="5">May</option>
                                                <option value="6">June</option>
                                                <option value="7">July</option>
                                                <option value="8">August</option>
                                                <option value="9">September</option>
                                                <option value="10">October</option>
                                                <option value="11">November</option>
                                                <option value="12">December</option>
                                            </select>
                                            <span class="col-sm-5 mt-2 messages"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12 d-flex align-items-center">
                                        <span class="btn btn-primary float-end mt-3" id="btnSearch">
                                            <i class="fa fa-search  fs-4 me-2"></i>
                                            Search
                                        </span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xl-7">
                                        <div class="department-stats pt-4" id="birthdaylist">
                                        </div>
                                    </div>
                                    <div class="col-xl-5">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts {
    <script>
        var curPage = "BirthDayListReport";
    </script>
    <script type="text/html" id="birthday-template">
        <p class="mb-3">
            <i class="fas fa-birthday-cake mr-1 text-primary"></i>
            <b><span id="birth_day"></span></b> - <span id="name"></span>
        </p>
    </script>
    <script src="@Url.Content("~/scripts/reports/BirthDayListReport.js")" asp-append-version="true"></script>
}