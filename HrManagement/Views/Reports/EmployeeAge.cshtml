@{
    ViewData["Title"] = "Employee Age";
}


@*<!--start:::Main--> *@
<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
    <div class="d-flex flex-column flex-column-fluid">
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    </ul>
                </div>
            </div>
        </div>
        <div id="kt_app_content" class="app-content flex-column-fluid">
            <div id="kt_app_content_container" class="app-container container-fluid">
                <div class="container-fluid" id="app-content-container-fluid">

                    <div class="row gy-5 g-xl-1 mt-5">
                        <div class="card card-flush">
                            <div class="card-header pt-7 mb-3">
                                <h3 class="card-title align-items-start flex-column">
                                    <span class="card-label text-black">
                                    </span>
                                </h3>
                            </div>
                            <div class="card-body pt-4">
                                <div class="row">
                                    <div class="col-xl-7">
                                        <div class="age-stats pt-4" id="age-stats" style="height:50vh">
                                        </div>
                                    </div>
                                    <div class="col-xl-5">
                                        <div class="row" id="age-wise-stats">
                                            <div class="col-xl-6">
                                                <div class="card card-flush h-150px shadow-sm border-start border-0 border-3 border-primary mb-4 widget report-widget dark-mode-background">
                                                    <div class="card-body pt-4">
                                                        <h6 class="text-uppercase">Total employees</h6>
                                                        <div class="text-primary fs-2tx" id="total-employee"></div>
                                                        <p id="current-date"></p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts {
    <script>
        var curPage = "AgeReports";
    </script>
    <script type="text/html" id="age-template">
        <div class="col-xl-6">
            <div class="card card-flush h-150px shadow-sm border-start border-0 border-3 border-primary mb-4 widget report-widget dark-mode-background">
                <div class="card-body pt-4">
                    <h6 class="text-uppercase" id="agename"></h6>
                    <div class="text-primary fs-2tx" id="age-total"></div>
                    <div class="text-gray-500 fs-2x" id="age-percent"></div>
                </div>
            </div>
        </div>
    </script>
    <script src="@Url.Content("~/scripts/reports/agereport.js")" asp-append-version="true"></script>
}