@{
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
}
@section PageCSS {
<!-- ✅ Bootstrap 5.1.3 CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet" />
}

<style>
    :root {
        --accent: #ff4444; /* red accent like YouTube */
        --muted-bg: #f5f7fa;
        --card-shadow: 0 6px 18px rgba(18, 38, 63, 0.07);
    }



    /* Make the main container take full height minus navbar */
    main {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 1rem;
        min-height: calc(100vh - 70px); /* adjust if navbar height changes */
        background: #e0e7ff; /* light indigo background */
    }
    /* Quiz card styling */
    .quiz-card {
        background: #fff;
        border-radius: 1rem;
        box-shadow: 0 8px 20px rgb(99 102 241 / 0.3);
        max-width: 850px;
        width: 100%;
        padding: 2.5rem 3rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .quiz-header {
        display: flex;
        justify-content: space-between;
        color: #3379b5; /* indigo-600 */
        font-weight: 700;
        font-size: 1rem;
        letter-spacing: 0.05em;
        text-transform: uppercase;
    }

    h1 {
        font-weight: 900;
        font-size: 2rem;
        color: #3379b5; /* slate-800 */
        margin: 0;
    }

    form {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
    }

    .option {
        display: flex;
        align-items: center;
        border-radius: 0.75rem;
        border: 2px solid #3379b5; /* indigo-200 */
        padding: 0.75rem 1rem;
        cursor: pointer;
        margin-bottom: 10px;
        transition: border-color 0.3s ease, background-color 0.3s ease;
    }

        .option:hover {
            border-color: #6366f1; /* indigo-500 */
            background-color: #eef2ff; /* indigo-100 */
        }

    input[type="radio"] {
        -webkit-appearance: none;
        appearance: none;
        width: 28px;
        height: 28px;
        border: 2.5px solid #a5b4fc; /* indigo-300 */
        border-radius: 0.5rem;
        margin-right: 1.5rem;
        position: relative;
        cursor: pointer;
        flex-shrink: 0;
        transition: border-color 0.3s ease, background-color 0.3s ease;
    }

        input[type="radio"]:checked {
            background-color: #4f46e5; /* indigo-600 */
            border-color: #4f46e5;
        }

            input[type="radio"]:checked::after {
                content: '';
                position: absolute;
                top: 6px;
                left: 6px;
                width: 12px;
                height: 12px;
                border-radius: 0.3rem;
                background: white;
            }


    input[type="checkbox"] {
        -webkit-appearance: none;
        appearance: none;
        width: 28px;
        height: 28px;
        border: 2.5px solid #a5b4fc; /* indigo-300 */
        border-radius: 0.5rem;
        margin-right: 1.5rem;
        position: relative;
        cursor: pointer;
        flex-shrink: 0;
        transition: border-color 0.3s ease, background-color 0.3s ease;
    }

        input[type="checkbox"]:checked {
            background-color: #4f46e5; /* indigo-600 */
            border-color: #4f46e5;
        }

            input[type="checkbox"]:checked::after {
                content: '';
                position: absolute;
                top: 6px;
                left: 6px;
                width: 12px;
                height: 12px;
                border-radius: 0.3rem;
                background: white;
            }

    .option-label {
        font-weight: 600;
        font-size: 1rem;
        color: #1e293b;
    }

    button.submit-btn {
        background-color: #3379b5;
        color: white;
        border: none;
        padding: 1rem 0;
        border-radius: 0.75rem;
        font-size: 1.125rem;
        font-weight: 700;
        cursor: pointer;
        transition: background-color 0.25s ease;
        box-shadow: 0 4px 12px rgb(99 102 241 / 0.4);
    }

        button.submit-btn:hover:not(:disabled) {
            background-color: #4338ca;
        }

        button.submit-btn:disabled {
            background-color: #a5b4fc;
            cursor: not-allowed;
            box-shadow: none;
        }

    .result-message {
        font-weight: 700;
        font-size: 1.25rem;
        margin-top: 0.75rem;
        min-height: 1.5em;
    }

    .correct {
        color: #22c55e; /* green-500 */
    }

    .incorrect {
        color: #ef4444; /* red-500 */
    }

    .correct-answer {
        background-color: #d4edda !important; /* Green */
        border-left: 5px solid #28a745;
    }

    .wrong-answer {
        background-color: #f8d7da !important; /* Red */
        border-left: 5px solid #dc3545;
    }
   
</style>



<main>

    <section class="quiz-card" aria-label="Quiz question">

        <header class="quiz-header" aria-live="polite">
            <div id="countQuestion"></div>
            <div id="Quiz-title"></div>
        </header>



        <form id="quizForm" aria-describedby="result-message">
            <input type="hidden" name="Id" id="Id" value="@ViewBag.id" />
            <input type="hidden" name="AssessmentPassingGrade" id="AssessmentPassingGrade"  />
            <input type="hidden" name="AssessmentId" id="AssessmentId" />
            <div id="Quiz-container" class="p-3" style="border: 2px solid #4338ca; border-radius: 8px;">
               


            </div>
            <button type="submit" id="submit-quiz-btn" class="submit-btn" aria-live="polite">Submit Answer</button>
            <div id="result-message" class="result-message" role="alert" aria-live="assertive"></div>
        </form> 
    </section>

</main>

@section scripts {

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/scripts/Quiz/index.js" asp-append-version="true"></script>


    <script>
         hideSpinner();
        const correctAnswer = 'D';
        const form = document.getElementById('quizForm');
        const resultMessage = document.getElementById('result-message');
        const submitBtn = form.querySelector('button[type="submit"]');

        form.addEventListener('submit', e => {
          e.preventDefault();
          const selected = form.answer.value;

          if(selected === correctAnswer) {
            resultMessage.textContent = 'Correct! Great job.';
            resultMessage.className = 'result-message correct';
          } else {
            resultMessage.textContent = 'Incorrect. Please try again.';
            resultMessage.className = 'result-message incorrect';
          }

          submitBtn.disabled = true;
          [...form.answer].forEach(input => input.disabled = true);
        });
    </script>

}

