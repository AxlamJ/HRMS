@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json;
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Manage Departments";
    var UserRoleName = HttpContextAccessor.HttpContext?.Session?.GetString("UserRoleName");
}

@section PageCSS {
    <link href="~/css/accordion-style.css" rel="stylesheet" />
    <link href="~/css/custom/Product.css" rel="stylesheet" />

}

<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
    <div class="d-flex flex-column flex-column-fluid">
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                        <li class="breadcrumb-item">
                            <a href="/Home/Index"
                               class="fw-bold fs-14px" style="color:#1F4293 !important">
                                <i class="fa fa-home"
                                   style="color:#1F4293 !important"></i> &nbsp;Home
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <i class="fa fa-chevron-right fs-11px"
                               style="color:#1F4293 !important"></i>
                        </li>
                        <li class="breadcrumb-item fs-14px fw-bold" style="color:#1F4293 !important"
                            data-i18n="">Trainings</li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="kt_app_content" class="app-content flex-column-fluid">
            <div id="kt_app_content_container" class="app-container container-fluid">
                <div class="container-fluid" id="app-content-container-fluid">





<div class="m-3 bg-light  min-vh-100 d-flex flex-column">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
  
           
     

    </div>

 

    <!-- Search & Sort -->
                       <div class="row m-4 align-items-center">
                            <div class="container mt-5">
                                <!-- Row 1 -->
                                <div class="row mb-3">
                                    @if (UserRoleName.ToLower() == "super admin" || UserRoleName.ToLower() == "admin")
                                    {
                                        <div class="text-end">
                                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#singleInputModal">
                                                <i class="bi bi-plus-lg me-1"></i> Create
                                            </button>
                                        </div>

                                    }
                                    <!-- Visible To -->
                                    <div class="col-md-3 d-none">
                                        <label class="form-label">Visible To</label>
                                        <select class="form-select" id="visible-to" name="visible-to" data-control="select2" data-close-on-select="false" data-placeholder="Select Visible To" data-allow-clear="true">
                                            <option></option>
                                            <option value="all">All</option>
                                            <option value="departments">Departments</option>
                                            <option value="employees">Employees</option>
                                            <option value="sites">Sites</option>
                                        </select>
                                        <span class="form-text text-danger messages"></span>
                                    </div>

                                    <!-- Departments -->
                                    <div class="col-md-3 d-none" id="departments-dd">
                                        <label class="form-label">Departments</label>
                                        <select class="form-select" id="departments" name="departments" data-control="select2" multiple data-close-on-select="false" data-placeholder="Select Departments" data-allow-clear="true">
                                            <option></option>
                                        </select>
                                    </div>

                                    <!-- Department Sub-Category -->
                                    <div class="col-md-3 d-none" id="department-sub-category-dd">
                                        <label class="form-label">Department Sub-Category</label>
                                        <select class="form-select" id="department-sub-category" name="department-sub-category" data-control="select2" multiple data-placeholder="Select Sub-Category" data-allow-clear="true">
                                            <option></option>
                                        </select>
                                    </div>

                                    <!-- Employees -->
                                    <div class="col-md-3 d-none" id="employees-dd">
                                        <label class="form-label">Employees</label>
                                        <select class="form-select" id="employees" name="employees" data-control="select2" multiple data-close-on-select="false" data-placeholder="Select Employees" data-allow-clear="true">
                                            <option></option>
                                        </select>
                                    </div>
                                </div>

                                <!-- Row 2 -->
                                <div class="row">
                                    <!-- Sites -->
                                    <div class="col-md-3 d-none" id="sites-dd">
                                        <label class="form-label">Sites</label>
                                        <select class="form-select" id="sites" name="sites" data-control="select2" multiple data-close-on-select="false" data-placeholder="Select Sites" data-allow-clear="true">
                                            <option></option>
                                        </select>
                                    </div>
                                    <!-- Add more dropdowns here if needed -->
                                </div>
                            </div>

        <div class="row">
            <div class="col-12 d-flex align-items-center">
                <div style="display:none">
                    <span><strong>1</strong> Products</span>
                </div>
               
            </div>
        </div>


    </div>

    <div class="row p-3" id="Tarining-Grid-Card">
    </div>


    <div class="card d-none">
        <div class="card-body">
            <div id="table-default" class="table-responsive">
                <table class="table table-striped table-bordered gy-5 gs-7 rounded" id="tbl_training_list">
                </table>
            </div>
        </div>
    </div>






    <!-- Products Grid -->
    <div class="row g-4" style="display:none">
        <!-- Product Card -->
        <div class="col-sm-6 col-lg-4">
            <div class="card product-card shadow-sm">
                <div class="position-relative">
                    <img src="https://cdn.courses.apisystem.tech/memberships/hqso2DcoE5nrxoLOqZ3I/product/6eff4d2f-36c3-4282-aaaa-577948641e69-8bvs"
                         class="card-img-top"
                         alt="Product Image">
                    <div class="position-absolute top-0 end-0 p-2">
                        <button class="btn btn-sm">
                            <i class="bi bi-three-dots-vertical text-white"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-truncate">
                        Patient Experience Coordinator: Foundations & Best Practices (Level 1.1)
                    </h5>
                    <p class="badge bg-secondary">
                        <i class="bi bi-people-fill me-1"></i> 86 Members
                    </p>
                </div>
            </div>
        </div>
        <!-- Repeat for more products -->
    </div>
</div>

                    <div class="modal fade" id="singleInputModal" tabindex="-1" aria-labelledby="singleInputModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <form id="add-update-training-form" novalidate>
                                <div class="modal-header">
                                    <h5 class="modal-title" id="singleInputModalLabel">Create New Training</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>

                                <div class="modal-body">
                                   
                                        <div class="mb-3">
                                            <label for="training-title" class="form-label">Title</label>
                                            <input type="text" class="form-control" name="training-title" id="training-title" placeholder="Enter Training Title...">
                                        </div>

                                        <!-- Radio Buttons -->
                                        <div class="mb-3">
                                            <label class="form-label d-block">Training Type</label>

                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="training-type" id="typeOffline" value="0" checked>
                                                <label class="form-check-label" for="typeOffline">Internal</label>
                                            </div>

                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="training-type" id="typeOnline" value="1">
                                                <label class="form-check-label" for="typeOnline">External</label>
                                            </div>
                                        </div>

                                        <!-- URL Textbox -->
                                        <div class="mb-3 d-none" id="url-container">
                                            <label for="training-url" class="form-label">URL</label>
                                            <input type="url" class="form-control" name="training-url" id="training-url" placeholder="Enter URL...">

                                        </div>

                                        <!-- Upload Image Button and filename display -->
                                        <div class="mb-3 d-none" id="upload-container">
                                            <label for="training-image" class="form-label">Upload Image</label>
                                            <input type="file" class="form-control" id="training-image" accept="image/*">

                                            <!-- File name display -->
                                            <input type="text" class="form-control mt-2" id="image-name" readonly placeholder="No file chosen">
                                        </div>

                                   
                                </div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="button" class="btn btn-primary" id="add-update-training">Add</button>
                                        <button type="button" class="btn btn-primary d-none" id="add-online-training">Add</button>
                                </div>
                              </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



@section scripts {


    <script src="~/assets/plugins/global/plugins.bundle.js"></script>
    <script src="~/assets/js/scripts.bundle.js"></script>
    <script src="~/assets/js/widgets.bundle.js"></script>
    <script src="~/assets/js/custom/widgets.js"></script>
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>

    <script src="@Url.Content("/js/validate.min.js")"></script>
    <script src="@Url.Content("/scripts/Products/index.js")" asp-append-version="true"></script>
    <script src="@Url.Content("/scripts/Products/create.js")" asp-append-version="true"></script>
    


    <script>
      
             var DropDownsData = {};
        @if (ViewBag.DropDownData != null)
        {
                        <text>
                             DropDownsData = @(Html.Raw(Json.Serialize(ViewBag.DropDownData)))

                       </text>
        }


    </script>
}
;

